{
    "name": "miyagi-code-modernization-sample",
    "publisher": "Microsoft",
    "displayName": "Copilot Code Modernization Agent",
    "description": "GH Copilot Chat extension agent to modernize code blocks",
    "repository": {
        "type": "git",
        "url": "https://github.com/Azure-Samples/miyagi"
    },
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.86.0"
    },
    "extensionDependencies": [
        "github.copilot-chat"
    ],
    "miyagiegories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "enabledApiProposals": [
        "chatAgents2",
        "chatRequestAccess"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^20.5.9",
        "@types/vscode": "1.82.0",
        "eslint": "^7.22.0",
        "tslint": "^6.1.3",
        "typescript": "^4.0.3"
    }
}
